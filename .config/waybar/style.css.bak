/* Premade colors I found on some random repo */
@import "colors.css";

/* Global Settings */
* {
  border: none;
  border-radius: 0;
  font-family: "Nerd Font", "Font Awesome 6 Free", sans-serif;
  font-weight: 900;
  font-size: 14px;
  min-height: 0;
  /* background-color: @color13; */
}

.module {
}

/* Waybar. */
window#waybar {
  /* Removes the "fluff" inbetween modules. */
  /* all:unset; */
  background: @color12;
  
}
/* Workspaces */
#workspaces button {
  margin: 0 0 0 0;
  padding: 0px 5px;
  color: @color0;
  background-color: @color1;
  /* box-shadow: inset 0 -3px transparent; */
  border-radius: 10px;
}
/* Differentiate active workspace */
#workspaces button.active {
  color: @color0;
  padding: 0px 35px;
  background-color: @color11;
  border: 2px @lavender;
}

