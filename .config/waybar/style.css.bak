/* Clock */
#clock {
  padding: 3px 15px;
  color: @lavender;
  border-radius: 5px;
  margin: 10 0 0 0;
  background-color: @crust;
}

/* Right modules clumped together */
.modules-right {
  border-radius: 5px;
  color: @lavender;
  padding: 0px 20px;
  margin: 10 10 0 0;
  background-color: @crust;
}
#pulseaudio {
  margin: 0px 10px 0px 10px;
}
/* Removes network module that is base packaged in with tray for some reason  */
#network {
  padding: 0;
  margin: 0;
  font-size: 0;
}
